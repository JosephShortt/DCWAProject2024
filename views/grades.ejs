<style>
    table {
        border-collapse: collapse;
        width: 100%;
        max-width: 800px;
        margin: 20px 0;
    }
    
    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }
    
    th {
        background-color: #f2f2f2;
    }
</style>

<h1>Grades</h1>
<a href="/">Home</a>

<table>
    <thead>
        <tr>
            <th>Student</th>
            <th>Module</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        <% 
        let currentStudent = '';
        gradesList.forEach((row) => {
            if (row.student_name !== currentStudent) {
                currentStudent = row.student_name;
                if (!row.module_name) {
                    %>
                    <tr>
                        <td><%= row.student_name %></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <%
                } else {
                    %>
                    <tr>
                        <td><%= row.student_name %></td>
                        <td><%= row.module_name %></td>
                        <td><%= row.grade %></td>
                    </tr>
                    <%
                }
            } else if (row.module_name) {
                %>
                <tr>
                    <td><%= row.student_name %></td>
                    <td><%= row.module_name %></td>
                    <td><%= row.grade %></td>
                </tr>
                <%
            }
        }) 
        %>
    </tbody>
</table>