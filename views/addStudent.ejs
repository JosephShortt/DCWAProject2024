<div>
    <a href="/" class="home-link">Home</a>
    <h1>Add Student</h1>
</div>

<!-- Display errors if there are any -->
<% if (errors && errors.length > 0) { %>
    <div style="color: red; margin-bottom: 1em;">
        <ul>
            <% errors.forEach(function(error) { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    </div>
<% } %>
<!--Form for adding a student-->
<form action="/students/add" method="POST">
    <div>
        <label for="sid">Student ID:</label>
        <!--id only accepts 4 character-->
        <input 
            type="text" 
            id="sid" 
            name="sid" 
            value="<%= locals.student ? student.sid : '' %>"
            required
            minlength="4"
            maxlength="4"
        >
    </div>
    
    <div>
        <label for="name">Name:</label>
        <input 
            type="text" 
            id="name" 
            name="name" 
            value="<%= locals.student ? student.name : '' %>"
            required
        >
    </div>
    
    <div>
        <label for="age">Age:</label>
        <input 
            type="number" 
            id="age" 
            name="age" 
            value="<%= locals.student ? student.age : '' %>"
            required
        >
    </div>
    
    <div>
        <!--When submitted, sends post request to /students/add-->
        <button type="submit">Add Student</button>
        <a href="/students">Cancel</a>
    </div>
</form>